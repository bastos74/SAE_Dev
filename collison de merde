if (sens.X < 0)
                    {
                        _sens = -1;
                        ushort tx = (ushort)(png.position.X / ScreenPlay._tiledMap.TileWidth + 1.25);
                        ushort ty = (ushort)(png.position.Y / ScreenPlay._tiledMap.TileHeight);
                        png.position += sens * vitesse * deltaTime;
                        if (Colision.IsCollision(tx, ty))
                        { png.position.X -= _sens * vitesse * deltaTime; }
                    }

                    if (sens.X > 0)
                    {
                        _sens = 1;
                        ushort tx = (ushort)(png.position.X / ScreenPlay._tiledMap.TileWidth - 1.25);
                        ushort ty = (ushort)(png.position.Y / ScreenPlay._tiledMap.TileHeight);
                        png.position += sens * vitesse * deltaTime;
                        if (Colision.IsCollision(tx, ty))
                        { png.position.X -= _sens * vitesse * deltaTime; }
                    }

                    if (sens.Y < 0)
                    {
                        _sens = -1;
                        ushort tx = (ushort)(png.position.X / ScreenPlay._tiledMap.TileWidth);
                        ushort ty = (ushort)(png.position.Y / ScreenPlay._tiledMap.TileHeight + 1);
                        png.position += sens * vitesse * deltaTime;
                        if (Colision.IsCollision(tx, ty))
                        { png.position.Y -= _sens * vitesse * deltaTime; }
                    }

                    if (sens.Y > 0)
                    {
                        _sens = 1;
                        ushort tx = (ushort)(png.position.X / ScreenPlay._tiledMap.TileWidth);
                        ushort ty = (ushort)(png.position.Y / ScreenPlay._tiledMap.TileHeight - 1);
                        png.position += sens * vitesse * deltaTime;
                        if (Colision.IsCollision(tx, ty))
                        { png.position.Y -= _sens * vitesse * deltaTime; }
                    }
